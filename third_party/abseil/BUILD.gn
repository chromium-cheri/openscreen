config("abseil_config") {
  include_dirs = [
    "//third_party/abseil/src/abseil-cpp",
    "//",
  ]
}

source_set("abseil") {
  sources = [
    "src/abseil-cpp/absl/base/attributes.h",
    "src/abseil-cpp/absl/base/config.h",
    "src/abseil-cpp/absl/base/internal/atomic_hook.h",
    "src/abseil-cpp/absl/base/internal/identity.h",
    "src/abseil-cpp/absl/base/internal/inline_variable.h",
    "src/abseil-cpp/absl/base/internal/invoke.h",
    "src/abseil-cpp/absl/base/internal/raw_logging.cc",
    "src/abseil-cpp/absl/base/internal/raw_logging.h",
    "src/abseil-cpp/absl/base/log_severity.h",
    "src/abseil-cpp/absl/base/macros.h",
    "src/abseil-cpp/absl/base/optimization.h",
    "src/abseil-cpp/absl/base/policy_checks.h",
    "src/abseil-cpp/absl/base/port.h",
    "src/abseil-cpp/absl/memory/memory.h",
    "src/abseil-cpp/absl/meta/type_traits.h",
    "src/abseil-cpp/absl/types/bad_optional_access.cc",
    "src/abseil-cpp/absl/types/bad_optional_access.h",
    "src/abseil-cpp/absl/types/optional.cc",
    "src/abseil-cpp/absl/types/optional.h",
  ]

  configs -= [ "//build/config:symbol_visibility_hidden" ]
  configs += [ "//build/config:symbol_visibility_default" ]
  configs -= [ "//build:default_include_dirs" ]

  public_configs = [":abseil_config"]
}
