include_rules = [
    # Platform API code should depend on no outside code/libraries, other than
    # the standard toolchain libraries (C, STL) and platform/base.
    '-absl',
    '-platform',
    '+platform/api',
    '+platform/base',
    '-util',
    '-third_party',
]

specific_include_rules = {
  ".*_unittest\.cc": [
    '+platform/test',
    '+util',
    '+third_party',
  ],

  # Normally this is a big issue because we don't want library clients to
  # depend on util/.  However, this header is only used by internal targets and
  # will be moved to util/ in the near future.
  "scoped_wake_lock.h": [
    '+util/serial_delete_ptr.h',
  ]
}
